{
  "name": "structure",
  "displayName": "Structure",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/wyattbui/vscode.structure.git"
  },
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "structureView",
          "title": "Structure",
          "icon": "resources/structure-icon.svg"
        },
        {
          "id": "mappingView",
          "title": "Mapping",
          "icon": "resources/mapping-icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "structureView",
          "name": "Structure",
          "icon": ""
        }
      ],
      "structureView": [
        {
          "id": "structureTree",
          "name": "Structure Tree",
          "icon": "resources/structure-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "structureView.refresh",
        "title": "Refresh structure",
        "icon": "$(refresh)"
      },
      {
        "command": "structureView.filterEntity",
        "title": "Filter structure",
        "icon": "$(filter)"
      },
      {
        "command": "structureView.filterEntityByText",
        "title": "Filter structure",
        "icon": "$(filter)"
      },
      {
        "command": "structureView.clearFilter",
        "title": "üßπ Clear Filter Structure",
        "icon": "$(discard)"
      },
      {
        "command": "structureView.pinEntity",
        "title": "üìå Pin structure"
      },
      {
        "command": "structureView.unpinEntity",
        "title": "‚ùå Unpin structure"
      },
      {
        "command": "structureView.selectForComparison",
        "title": "üëâ Select for Comparison"
      },
      {
        "command": "structureView.clearComparison",
        "title": "üßπ Clear Comparison",
        "icon": "$(surround-with)"
      },
      {
        "command": "structureView.searchInCurrentFile",
        "title": "üîç Search Class in Current File"
      }
    ],
    "keybindings": [
      {
        "command": "structureView.filterEntityByText",
        "key": "alt+a",
        "when": "editorHasSelection && editorTextFocus"
      },
      {
        "command": "structureView.selectEntityByText",
        "key": "alt+q",
        "when": "editorHasSelection && editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "structureView.filterEntity",
          "title": "Filter Entities by Name"
        },
        {
          "command": "structureView.clearFilter",
          "title": "Clear Filter"
        }
      ],
      "view/item/context": [
        {
          "command": "structureView.pinEntity",
          "when": "view == structureTree ||  view == structureView && viewItem != pinned",
          "group": "navigation"
        },
        {
          "command": "structureView.unpinEntity",
          "when": "view == structureTree || view == structureView && viewItem  == pinned",
          "group": "navigation"
        },
        {
          "command": "structureView.selectForComparison",
          "title": "Compare with Another Entity",
          "when": "view == structureTree || view == structureView && resourceContext != compare",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "structureView.refresh",
          "when": "view == structureTree || view == structureView",
          "group": "navigation"
        },
        {
          "command": "structureView.filterEntity",
          "when": "view == structureTree || view == structureView ",
          "group": "navigation"
        },
        {
          "command": "structureView.clearFilter",
          "when": "view == structureTree || view == structureView",
          "group": "navigation"
        },
        {
          "command": "structureView.clearComparison",
          "when": "view == structureTree || view == structureView",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "structureView.filterEntity",
          "title": "Filter Entities by Name"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.4",
    "@types/colors": "^1.2.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.24",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "ts-morph": "^25.0.1"
  }
}
